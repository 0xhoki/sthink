<head>
  <meta name="title" content="New withdraws">
  <meta name="description" content="Making withraws for subsidence, underpinning and building control.">
  <meta name="keywords" content="withdraw, underpinning, building control">
</head>
<div class="container">
  <div class="col-md-12  custom-container">
    <h5>Available Balance : £ <%= current_user.available_balance %></h5>
  </div>
</div>

<div class = "container" id = "job_form">
  <div class="col-lg">
  <%= form_for(@withdraw) do |f| %>
    <% if @withdraw.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@withdraw.errors.count, "error") %> prohibited this withdraw from being saved:</h2>

        <ul>
        <% @withdraw.errors.full_messages.each do |message| %>
          <li><%= @withdraw %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">

        <div class="form-group">
          <%= f.hidden_field :user_id, autofocus: true, class: "form-control", placeholder: "", required: true %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :email, autofocus: true, class: "form-control" , placeholder: "", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :amount, "Amount (£)" %>
          <%= f.number_field :amount, autofocus: true, class: "form-control" , placeholder: "", required: true %>
        </div>
        
        <br>
        <div class="form-group" id = "button">
          <%= f.submit "GET PAID NOW", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>