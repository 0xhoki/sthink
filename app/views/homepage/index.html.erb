<head>
  <meta name="title" content="main homepage">
  <meta name="description" content="First page that shows before login.">
  <meta name="keywords" content="structured-thinking, first page, Basement">
</head>
<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="cover-container">
        <img class="cover-image" src="<%= image_url('cover/cover1.jpg') %>" alt="First slide">
      </div>
      <div class="container">
        <div class="carousel-caption">
          <h1>Structural Engineers. Surveyors. Architects and Designers.</h1>
          <p>The marketplace for all your residential property needs</p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="cover-container">
        <img class="cover-image" src="<%= image_url('cover/cover2.jpg') %>" alt="Second slide">
      </div>
      <div class="container">
        <div class="carousel-caption">
          <h1>Planning an extension, home improvements, or moving house?</h1>
          <p>Find the professionals to take your project from start to finish</p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="cover-container">
        <img class="cover-image" src="<%= image_url('cover/cover3.jpg') %>" alt="Third slide">
      </div>
      <div class="container">
        <div class="carousel-caption">
          <h1>Choose from 100s of qualified professionals</h1>
          <p>Structural engineers, surveyors, architects and designers ready to assist you with your project</p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="cover-container">
        <img class="cover-image" src="<%= image_url('cover/cover4.jpg') %>" alt="Fourth slide">
      </div>
      <div class="container">
        <div class="carousel-caption">
          <h1>Hire with confidence</h1>
          <p>Compare job proposals, review previous jobs and leave feedback</p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="cover-container">
        <img class="cover-image" src="<%= image_url('cover/cover5.jpg') %>" alt="Fifth slide">
      </div>
      <div class="container">
        <div class="carousel-caption">
          <h1>Be the boss!  Manage your own project.</h1>
          <p>Pick your design team and build relationships through Structured Thinking</p>
        </div>
      </div>
    </div>
  </div>

  <form class="col-sm-12" id="startForm">
    <div class="form-group col-sm-4 col-sm-offset-4">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="What do you need to get done? e.g. party wall survey">
        <span class="input-group-btn">
          <%= link_to 'GET STARTED', getstarted_homepage_index_path, class: "btn btn-warning" %>
        </span>
      </div>
    </div>
  </form>

  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->


<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing">

  <!-- START THE FEATURETTES -->

  <div class="row featurette">
    <div class="col-md-7">
      <h2 class="featurette-heading">Structural Engineers</h2>
      <p class="lead">Find a local structural engineer for your loft conversion, knock through, extension, structural survey, basement conversion and more…</p>
    </div>
    <div class="col-md-5">
      <img class="featurette-image img-responsive center-block" src="<%= image_url('feature/feature1.jpg') %>">
    </div>
  </div>

  <hr class="featurette-divider">

  <div class="row featurette">
    <div class="col-md-7 col-md-push-5">
      <h2 class="featurette-heading">Surveyors</h2>
      <p class="lead">Find a local surveyor for your valuation survey, home buyers report, insurance claim, party wall survey, lease extension and more…</p>
    </div>
    <div class="col-md-5 col-md-pull-7">
      <img class="featurette-image img-responsive center-block" src="<%= image_url('feature/feature1.jpg') %>">
    </div>
  </div>

  <hr class="featurette-divider">

  <div class="row featurette">
    <div class="col-md-7">
      <h2 class="featurette-heading">Architects and Designers</h2>
      <p class="lead">Find a local architect or designer for your planning application, extension, interior design, landscape design, photography and more…</p>
    </div>
    <div class="col-md-5">
      <img class="featurette-image img-responsive center-block" src="<%= image_url('feature/feature1.jpg') %>">
    </div>
  </div>


</div><!-- /.container -->
