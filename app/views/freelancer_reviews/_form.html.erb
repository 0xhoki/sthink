<div class = "container" id = "job_form">
  <div class="col-lg">
  <%= form_for(review) do |f| %>
    <% if review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% review.errors.full_messages.each do |message| %>
          <li><%= review %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">

        <div class="form-group">
          <%= f.label :hearts, "Rate the Score" %>
          <div class="row lead" style="margin-left: 5px;">
            <div id="hearts" class="starrr"></div>
            <span id="count">0</span> star(s)
          </div>
          <%= f.hidden_field :score, autofocus: true, class: "form-control", placeholder: "Score", required: true %>
        </div>

        <div class="form-group">
          <%= f.label "Notes" %>
          <%= f.text_area :notes, autofocus: true, class: "form-control" , placeholder: "", rows: 5, required: true %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :job_id, autofocus: true, class: "form-control" , placeholder: "", required: true %>
        </div>
        
        <br>
        <div class="form-group" id = "button">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>