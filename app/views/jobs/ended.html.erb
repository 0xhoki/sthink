<head>
  <meta name="title" content="ended jobs page">
  <meta name="description" content="Shows the ended jobs of structural engineer to freelancers.">
  <meta name="keywords" content="structural engineer, freelancer, architect">
</head>
<div class="container">
  <h4>Ended Jobs</h4>
</div>

<div class="container custom-container">
  <% if @jobs.count > 0 %>
    <% @jobs.each do |job| %>
      <div class="custom-table-cell">
        <div class="row"> 

          <div class="col-md-6">
            <div class="row">
              <%= link_to job.title, ended_details_jobs_path(id: job.id), {method: :get, class: "custom-table-cell-title-link"} %>
            </div>
            <div class="row">
              <span class="glyphicon glyphicon-record"></span>
              <span class="less-highlight">Hired : </span>
              <span><%= job.freelancer.name %></span>
            </div>
          </div>

          <div class="col-md-3">
            <div class="row">
              <span class="less-highlight">Budget : </span>
              <span>£ <%= job.price %></span>
            </div>
            <div class="row">
              <span class="less-highlight">Spent : </span>
              <span>£ <%= job.spent %></span>
            </div>
          </div>

          <div class="col-md-3">
            <div class="row">
              <span class="glyphicon glyphicon-time"></span>
              <span class="less-highlight">Started at</span>
              <span><%= job.started_at.to_date %></span>
            </div>
            <div class="row">
              <span class="glyphicon glyphicon-time"></span>
              <span class="less-highlight">Ended at</span>
              <span><%= job.ended_at.to_date %></span>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  <% else %>
    <div class="no-content-fill">
      <h3> No Archived Job ... </h3>
    </div>
  <% end %>
  
</div>