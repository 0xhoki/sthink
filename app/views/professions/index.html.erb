<head>
  <meta name="title" content="Professions index page">
  <meta name="description" content="Showing professions for architects, surveyors and structural engineers.">
  <meta name="keywords" content="profession, freelance architects, Lease extension">
</head>
<p id="notice"><%= notice %></p>

<h1>Professions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professions.each do |profession| %>
      <tr>
        <td><%= profession.title %></td>
        <td><%= link_to 'Show', profession %></td>
        <td><%= link_to 'Edit', edit_profession_path(profession) %></td>
        <td><%= link_to 'Destroy', profession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profession', new_profession_path %>
